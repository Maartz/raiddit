<div class="pt-1 flex flex-wrap items-center">
  <div class="flex-1">
    <%= link_to submission_path(submission, anchor: "comments"), class: "no-underline text-gray-700 mr-2 flex items-center" do %>
      <%= render_svg "icons/conversation", title: "Comments", styles: " fill-current text-gray-500 icons-sm hover:text-gray-600" %>
      <div class="text-sm text-gray-600 ml-2">
        <%= pluralize(submission.comments.count, "comment") %>
      </div>
    <% end %>
  </div>

  <div class="flex items-center justify-end">

    <% if author_of?(submission) %>
      <%= link_to edit_submission_path(submission), class: "no-underline mr-2" do %>
        <%= render_svg "icons/edit", styles: "fill-current icons-sm text-gray-500 hover:text-gray-700", title: "Edit" %>
      <% end %>

      <%= link_to submission, method: :delete, class: "no-underline", data: {confirm: "Are you sure you want to delete this submission ?"} do %>
        <%= render_svg "icons/delete", styles: "fill-current icons-sm text-gray-500 hover:text-gray-700", title: "Delete" %>
      <% end %>
    <% end %>
  </div>
</div>