<div class="card flex flex-wrap items-center justify-between px-4 py-2">
  <div class="flex-1">
    <%= link_to community, class:"no-underline text-gray-700"  do %>
      <p class="m-0 leading-tight">
        <span class="text-xs no-underline inline-flex items-center text-gray-600">
          <%= render_svg "icons/conversation", styles: "w-3 fill-current text-gray-500 mr-1" %>
          rd/<%= community.name %>
        </span>
      </p>
      <h3 class="m-0 leading-none text-base">
        <%= community.title %>
      </h3>
    <% end %>
  </div>
  <div class="text-xs font-normal flex">
    <%= link_to community, class:"no-underline" do %>
      <%= render_svg "icons/view", styles: "fill-current w-4 text-gray-500", title: "View" %>
    <% end %>

    <%= link_to edit_community_path(community), class: "no-underline ml-2" do %>
      <%= render_svg "icons/edit", styles: "fill-current w-4 text-gray-500", title: "Edit" %>
    <% end %>

    <%= link_to community, class: "no-underline ml-2", method: :delete, data: {confirm: "Are you sure you want to delete '#{community.name}' community ?" } do %>
      <%= render_svg "icons/delete", styles:"fill-current w-4 text-gray-500", title:"Delete" %>
    <% end %>
  </div>
</div>